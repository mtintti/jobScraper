generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String?
  email     String   @unique
  password  String
  jobs      Job[]
  internships Internship[]
}

model Job {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  jobTitle      String
  company       String
  description   String?
  requirements  String?
  location      String
  postedDate    DateTime @default(now())
  status        String
  userId        String   @db.ObjectId
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Internship {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  titleI        String
  companyI      String
  descriptionI  String?
  requirementsI String?
  locationI     String
  postedDateI   DateTime @default(now())
  statusI       String
  userId        String   @db.ObjectId
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}